<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.nareen.entity.Booking" table="booking_info">
		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="id" type="int" column="booking_id">
			<generator class="native" />
		</id>
		<property name="firstName" column="first_name" type="string" />
		<property name="lastName" column="last_name" type="string" />
		<property name="mailId" column="mail_id" type="string" />
		<property name="contact" column="contact" type="long" />
		<property name="flightNumber" column="flightNumber" type="string" />
		<property name="confirmation" column="confirmation" type="string" />
		</class>
</hibernate-mapping>